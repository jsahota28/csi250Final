@model ComputerOrder

<h4>Add to invoice for @Model.Order.Customer.FirstName @Model.Order.Customer.LastName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input asp-for="OrderID" hidden/>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ComputerID" class="custom-control-label"></label>
                <select asp-for="ComputerID" class="form-control" asp-items="ViewBag.Computers"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>